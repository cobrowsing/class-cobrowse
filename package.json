{
  "name": "class-cobrowse",
  "id": "class-cobrowse@ianbicking.org",
  "description": "This is a WebExtension that allows a teacher to lead students on their browsers",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "author": {
    "name": "Ian Bicking",
    "url": "https://www.ianbicking.org"
  },
  "bugs": {
    "url": "https://github.com/ianb/class-cobrowse/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/preset-env": "^7.9.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.1",
    "concurrently": "^5.2.0",
    "ejs": "^2.7.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-class-property": "^1.1.0",
    "eslint-plugin-fetch-options": "0.0.5",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-mozilla": "^1.3.0",
    "eslint-plugin-no-unsanitized": "^3.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "glob": "^7.1.6",
    "htmllint-cli": "0.0.7",
    "jest": "^25.5.3",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.3",
    "prettier": "1.18.2",
    "prettier-linter-helpers": "^1.0.0",
    "rollup": "^2.21.0",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.2",
    "web-ext": "^4.2.0"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "homepage": "https://github.com/ianb/class-cobrowse",
  "license": "GPL",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianb/class-cobrowse.git"
  },
  "scripts": {
    "start": "concurrently --kill-others --success first --names watch,browser 'npm run watch' 'npm run start-and-build'",
    "start-and-build": "npm-run-all maybeinstall build:manifest build:jsx build:rollup start-extension",
    "start-extension": "mkdir -p ${PROFILE:-Profile} && web-ext run --firefox-profile ${PROFILE:-Profile}/ --keep-profile-changes --firefox \"${FIREFOX:-nightly}\" --source-dir extension/ --browser-console",
    "start-android": "concurrently --kill-others --success first --names watch,android 'npm run watch' 'npm run start-and-build-android'",
    "test": "npm-run-all build:manifest lint jest",
    "jest": "jest",
    "build": "npm-run-all build:* package-prod",
    "build:deps": "mkdir -p extension/vendor/ ; for file in react/umd/react.production.min.js react-dom/umd/react-dom.production.min.js ; do cp node_modules/$file extension/vendor/ ; done",
    "build:manifest": "node bin/substitute-manifest.js",
    "build:jsx": "babel --relative --out-dir ../build --only '**/*.jsx' extension/ && node bin/move-changed-build-files.js",
    "build:rollup": "./bin/rollup-content-scripts.js",
    "watch-rebuild": "npm-run-all build:jsx build:manifest build:rollup",
    "watch": "nodemon --on-change-only -e jsx,ejs,content.js --exec 'npm run watch-rebuild'",
    "maybeinstall": "if [[ package.json -nt node_modules/last_install.txt ]] ; then npm install && touch node_modules/last_install.txt ; fi",
    "format": "prettier 'extension/**/*.{js,jsx,css}' --write",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint 'extension/**/*.css'",
    "lint:html": "htmllint extension/**/*.html",
    "lint:extension": "web-ext lint -s extension --self-hosted",
    "lint:js": "eslint --rule '{\"no-console\": \"error\"}' --ext 'js,jsx' extension/ bin/",
    "package": "npm-run-all build:* && web-ext build -s extension --filename class-cobrowse.xpi --overwrite-dest -i '**/*.ejs' -i '**/*.jsx'",
    "package-prod": "VERSION=\"$(node -e 'process.stdout.write(require(\"./package.json\").version, {encoding: \"UTF-8\"})')\" INSTALL_CHANNEL=prod LOG_LEVEL=info npm run package",
    "calculate-version": "node bin/calculate-version.js",
    "postinstall": "npm-run-all build:*"
  }
}
